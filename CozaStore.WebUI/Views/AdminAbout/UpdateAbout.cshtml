@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    .container {
        width: 100%;
        margin-top: 20px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 20px;
    }

    .col-6 {
        width: 48%; /* Card'lar %48 genişliğinde olacak */
    }

    .col-12 {
        width: 100%; /* Tam genişlik */
    }

    .card {
        margin-bottom: 1.5rem;
        flex: 1;
        box-sizing: border-box; /* Genişlik hesaplamasında padding'leri de hesaba katar */
    }

    .form-control {
        resize: vertical;
        padding: 10px;
        border-radius: 10px;
        border: 1px solid #ccc;
        font-size: 14px;
    }

    .form-control-large {
        height: 200px; 
    }

    .form-control::-webkit-scrollbar {
        width: 8px;
    }

    .form-control::-webkit-scrollbar-track {
        background: #f1f1f1;
    }

    .form-control::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 10px;
    }

        .form-control::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

    .button-container {
        text-align: center;
        margin-top: 20px;
    }

    .card-title {
        font-size: 18px;
        font-weight: bold;
    }

    .form-control-quote {
        height: 150px; 
    }

    .form-control-quote-author {
        height: 75px; 
    }

</style>

<form method="post" asp-action="UpdateAbout">
    <input type="hidden" asp-for="AboutId" />

    <!-- Hikayemiz ve Misyonumuz -->
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Hikayemiz</h5>
                    <textarea class="form-control form-control-large" asp-for="OurStoryDetail"></textarea>
                </div>
            </div>
        </div>

        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Misyonumuz</h5>
                    <textarea class="form-control form-control-large" asp-for="OurMissionDetail"></textarea>
                </div>
            </div>
        </div>
    </div>

    <!-- Alıntı Detayı ve Alıntı Yazarı -->
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Alıntı Detayı</h5>
                    <textarea class="form-control form-control-quote" asp-for="QuoteDetail"></textarea>
                </div>
            </div>
        </div>

        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Alıntı Yazarı</h5>
                    <input type="text" class="form-control form-control-quote-author" asp-for="QuoteAuthor" />
                </div>
            </div>
        </div>
    </div>

    <!-- Görseller -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Görsel 1</h5>
                    <input type="text" class="form-control" asp-for="Image1" />
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Görsel 2</h5>
                    <input type="text" class="form-control" asp-for="Image2" />
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Kapak Görseli</h5>
                    <input type="text" class="form-control" asp-for="CoverImage" />
                </div>
            </div>
        </div>
    </div>

    <!-- Güncelleme Butonu -->
    <div class="button-container">
        <button type="submit" class="btn btn-secondary m-1">Güncelle</button>
    </div>
</form>


