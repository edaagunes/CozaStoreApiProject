@model List<ResultCategoryWithProductList>
@{
    ViewData["Title"] = "CategoryWithProductList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 d-flex align-items-stretch">
    <div class="card w-100">
        <div class="card-body p-4">
            <!-- Kategori Başlığı ve Resmi -->
            <div class="category-header d-flex align-items-center mb-4">
                <img src="@Model.FirstOrDefault()?.ImageUrl" alt="Kategori Resmi" class="category-image" />
                <h3 class="category-title ms-3">@Model.FirstOrDefault()?.CategoryName - Kategori Ürünleri</h3>
            </div>

            <!-- Ürünler Listesi -->
            <div class="product-list">
                @foreach (var item in Model)
                {
                    @foreach (var product in item.Products)
                    {
                        <div class="product-card mb-3">
                            <div class="product-info d-flex flex-column align-items-center">                              
                                <img src="@product.ImageUrl" alt="@product.ProductName" class="product-image" />                            
                                <h6 class="product-name mt-2">@product.ProductName</h6>
                            </div>
                        </div>
                    }
                }
            </div>
            <!-- Geri Dön Butonu -->
            <div class="mb-4">
                <button class="btn btn-secondary" onclick="window.history.back()">Geri Dön</button>
            </div>
        </div>
    </div>
</div>

<style>
    .category-header {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .category-image {
        width: 80px;
        height: 80px;
        border-radius: 8px;
        object-fit: cover;
    }

    .category-title {
        margin-left: 20px;
        font-size: 24px;
        font-weight: bold;
    }

    .product-list {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .product-card {
        width: 150px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 8px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    .product-info {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .product-image {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border-radius: 5px;
    }

    .product-name {
        margin-top: 10px;
        font-size: 16px;
        font-weight: normal;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
        max-width: 100%;
    }

    .mb-4 {
        text-align: left;
    }
  
</style>
