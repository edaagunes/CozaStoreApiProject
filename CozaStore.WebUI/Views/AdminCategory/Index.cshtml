@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 d-flex align-items-stretch">
    <div class="card w-100">
        <div class="card-body p-4">
            <h5 class="card-title fw-semibold mb-4">Kategoriler</h5>
            <div class="table-responsive">
                <table class="table text-nowrap mb-0 align-middle">
                    <thead class="text-dark fs-4">
                        <tr>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0"></h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Kategori</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Başlık</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Açıklama</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Düzenle</h6>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td class="border-bottom-0"><h6 class="fw-semibold mb-0">@count</h6></td>
                                <td class="border-bottom-0">
                                    <img src="@item.ImageUrl" style="width:60px; height:60px; border-radius:50%; object-fit:cover;" />
                                </td>
                                <td class="border-bottom-0">
                                    <p class="mb-0 fw-normal">@item.CategoryName</p>
                                </td>
                                <td class="border-bottom-0">
                                    <div class="d-flex align-items-center gap-2">
                                        <h6>@item.Title</h6>
                                    </div>
                                </td>
                                <td class="border-bottom-0">
                                    <a href="/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
                                    <a href="/AdminCategory/UpdateCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a>
                                    <a href="/AdminCategory/CategoryWithProductList/@item.CategoryId" class="btn btn-secondary">Ürünler</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/AdminCategory/CreateCategory" class="btn btn-primary">Yeni Kategori Ekle</a>
            </div>
        </div>
    </div>
</div>

