
@{
    Layout = null;
}

<!doctype html>
<html lang="en">

@await Component.InvokeAsync("_AdminHeadLayout")

<body>
    <!--  Body Wrapper -->
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">
        <!-- Sidebar Start -->
        @await Component.InvokeAsync("_AdminSidebarLayout")
        <!--  Sidebar End -->
        <!--  Main wrapper -->
        <div class="body-wrapper">
            <!--  Header Start -->
            @await Component.InvokeAsync("_AdminHeaderLayout")
            <!--  Header End -->
            <div class="container-fluid">
                <div class="card">
                    <div class="card-body">
						@RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    @await Component.InvokeAsync("_AdminScriptLayout")
</body>

</html>
